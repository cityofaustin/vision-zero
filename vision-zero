def toolsShell(args):
    print("üêö  Starting tools shell")

    # fmt: off
    tool_runner_command = docker_compose_invocation + [
        "-f", "docker-compose.yml", 
        "-f",
        "docker-compose-ram-disk.yml" if args.ram_disk else "docker-compose-docker-volume.yml",
        "run",
        "--rm",
        "-e", "PGHOST=" + "postgis",
        "-e", "PGUSER=" + os.environ["POSTGRES_USER"],
        "-e", "PGPASSWORD=" + os.environ["POSTGRES_PASSWORD"],
        "-e", "PGDATABASE=" + os.environ["POSTGRES_DB"],
        "postgis",
    ]
    # fmt: on

    shell_command = ["bash"]
    subprocess.run(tool_runner_command + shell_command)


def stop(args):
    print("üõë  Stopping containers")
    subprocess.run(
        docker_compose_invocation
        + [
            "-f",
            "docker-compose.yml",
            "-f",
            (
                "docker-compose-ram-disk.yml"
                if args.ram_disk
                else "docker-compose-docker-volume.yml"
            ),
            "stop",
        ]
    )


def get_main_parser():
    parser = argparse.ArgumentParser(prog="vision-zero")
    # ü™Ñ generate a autocompletion script for the shell
    shtab.add_argument_to(parser, ["-s", "--print-completion"])
    parser.add_argument("-c", "--include-change-log-data", action="store_true")
    parser.add_argument("-r", "--ram-disk", action="store_true")
    parser.add_argument(
        "command",
        choices=[
            "build",
            "db-up",
            "db-down",
            "graphql-engine-up",
            "graphql-engine-down",
            "vze-up",
            "vze-down",
            "vzv-up",
            "vzv-down",
            "stop",
            "psql",
            "tools-shell",
            "replicate-db",
            "dump-local-db",
            "remove-snapshots",
            "hasura-console",
        ],
    )
    parser.add_argument("-f", "--filename", required=False)
    return parser


if __name__ == "__main__":
    parser = get_main_parser()
    args = parser.parse_args()
    docker_compose_invocation = checkDockerComposeAvailability()  # global .. üëé
    doCommand(args)
